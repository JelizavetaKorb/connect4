@page
@model WebApp.Pages.IndexModel

@{
    ViewData["Title"] = "Connect 4";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Welcome to Connect 4!</h2>
                </div>

                <div class="card-body p-4">
                    <div class="text-center">
                        <p class="lead text-muted">Please enter your name to get started</p>
                        
                        <form method="post" asp-page-handler="SetName" class="mt-4">
                            <div class="mb-3">
                                <input type="text"
                                       class="form-control form-control-lg text-center"
                                       name="username"
                                       placeholder="Enter your name"
                                       required
                                       maxlength="50"
                                       autofocus />
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                Start Playing
                            </button>
                        </form>
                        
                        <div class="mt-4">
                            <p class="text-muted small">Your name will be used to save your game progress</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>